  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "envalid": "^8.0.0",
    "express": "^4.21.0",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
